<div class="star celestial-body" style="
	width: <%= Math.log(star.radius * 2) * 15 %>px;
	height: <%= Math.log(star.radius * 2) * 15 %>px;
	background-color: #<%= star.name_hex_color %>;
	box-shadow: rgba(<%= star.name_rgb_color %>, 0.7) 0 0 <%= Math.log(star.radius * 2) * 5 %>px;
">
	<p class="name"><%= star.name %></p>

	<% _.each(star.planets, function(planet) { %>
		<div class="planet-container" style="
			width: <%= Math.log(planet.apogee) / Math.log(1.001) - planetSubVal %>px;
			height: <%= Math.log(planet.radius * 2) * 15 %>px;
			<!-- transform: translate(-50%, -50%) rotate(<%= planet.name_degrees %>deg); -->
		">
			<div class="animation-wrapper">
				<div class="planet celestial-body" style="
					width: <%= Math.log(planet.radius * 2) * 15 %>px;
					height: <%= Math.log(planet.radius * 2) * 15 %>px;
					background-color: #<%= planet.name_hex_color %>;
					box-shadow: rgba(<%= planet.name_rgb_color %>, 0.7) 0 0 <%= Math.log(planet.radius * 2) * 5 %>px;
				">
					<p class="name"><%= planet.name %></p>
				</div>
			</div>
		</div>
	<% }); %>
</div>
