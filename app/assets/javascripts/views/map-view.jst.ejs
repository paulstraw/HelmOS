<div class="star" style="
	width: <%= star.radius * 2 / 20 %>px;
	height: <%= star.radius * 2 / 20 %>px;
	background-color: #<%= star.name_hex_color %>;
">
	<% _.each(star.planets, function(planet) { %>
		<div class="planet-container" style="
			width: <%= planet.apogee / 20 %>px;
			height: <%= planet.radius * 2 / 20 %>px;
		">
			<div class="planet" style="
				width: <%= planet.radius * 2 / 20 %>px;
				height: <%= planet.radius * 2 / 20 %>px;
				background-color: #<%= planet.name_hex_color %>;
			">
				<%= _.each(planet.satellites, function(satellite) { %>
					<div class="satellite-container" style="
						width: <%= satellite.apogee / 20 %>px;
						height: <%= satellite.radius * 2 / 20 %>px;
					">
						<div class="satellite" style="
							width: <%= satellite.radius * 2 / 20 %>px;
							height: <%= satellite.radius * 2 / 20 %>px;
							background-color: #<%= satellite.name_hex_color %>;
						">

						</div>
					</div>
				<% }); %>
			</div>
		</div>
	<% }); %>
</div>

